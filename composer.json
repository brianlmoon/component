{
  "name": "moonspot/component",
  "description": "Library for creating HTML components in PHP",
  "type": "library",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Brian Moon",
      "email": "brian@moonspot.net"
    }
  ],
  "config": {
    "discard-changes": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Moonspot\\Component\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Moonspot\\Component\\Test\\": "tests/"
    }
  },
  "require": {
    "php": "^8.1"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.75",
    "phan/phan": "^5.4",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "lint": [
      "parallel-lint src/ tests/"
    ],
    "unit": [
      "phpunit --colors=never"
    ],
    "phan": [
      "phan -p"
    ],
    "test": [
      "@lint",
      "@unit",
      "@phan"
    ],
    "fix": [
      "php-cs-fixer fix --config .php-cs-fixer.dist.php src tests"
    ]
  }
}
